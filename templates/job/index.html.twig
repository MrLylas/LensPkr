{% extends 'base.html.twig' %}

{% block title %}Hello JobController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<h2>Jobs</h2>
<div class="example-wrapper">
    {% if jobs %} 
    {% for job in jobs %}
    <a href="{{ path('app_job_detail', {'id': job.id}) }}">
        <div class="jobcard">
            <h3>{{ job.jobName }}</h3>
            <p>{{ job.description }}</p>
        </div> 
    </a>  
        {% endfor %}
    {% else %}
        <p>No jobs found.</p>
    {% endif %}
</div>
{% endblock %}
